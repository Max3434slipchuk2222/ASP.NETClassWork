@model UserLinkViewModel

@if (Model != null)
{
    <div class="d-flex align-items-center">
        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <img src="/images/@Model.Image" alt="Avatar" class="rounded-circle" width="40" height="40" />
        }
        else
        {
            <img src="/images/default-user.png" alt="Default Avatar" class="rounded-circle" width="40" height="40" />
        }

        <span class="ms-2">@Model.Name</span>
    </div>
}